<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >


            <TextView
                    android:id="@+id/contact_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Cool Name:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                
                android:inputType="textFilter|textPersonName"
                android:paddingLeft="20dp" >

                <requestFocus />
            </EditText>

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nick Name:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Contact Number:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/contact_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|phone"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/contactWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Address:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email id:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Friends:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />



            <EditText
                    android:id="@+id/best_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends Are??"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Love is??:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/love"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is Money for You??:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Like To Get Dressed In:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/dress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Idol::"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/idol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everything Else About You:"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                    android:id="@+id/everything"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="Your Perfect Picture:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cameraClick"
                    android:layout_margin="10dp"
                    android:src="@drawable/image"

                    android:layout_gravity="center_horizontal"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:maxWidth="120dp"
                    android:maxHeight="120dp"
                    android:clickable="true"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE"
                    android:id="@+id/updatebutton"/>

            

        </LinearLayout>
</ScrollView>
