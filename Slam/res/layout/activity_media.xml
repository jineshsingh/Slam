<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >



                <TextView
                        android:id="@+id/contact_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Song:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_song"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Movie:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_movie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Singer:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_singer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>
                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Actor:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_actor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Actress:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_actress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Dance:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_dance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Dancer:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_dancer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourite Dialogue:"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                        android:id="@+id/fav_dialogue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"/>

                <Button
                    android:id="@+id/updatemedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE" />

            </LinearLayout>




            </ScrollView>
